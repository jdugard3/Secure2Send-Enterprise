# Secure2Send Enterprise Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Server Configuration
NODE_ENV=production
PORT=5000

# Session & Security
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# Email Configuration
EMAIL_PROVIDER=mailgun
# Mailgun Settings
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mail.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@mail.yourdomain.com
# Admin Email (for receiving notifications)
ADMIN_EMAIL=admin@yourdomain.com

# Application URL
APP_URL=https://yourdomain.com

# Cloudflare R2 Configuration (for secure file storage)
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=secure2send-documents
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.your-domain.com

# IRIS CRM Integration (for lead and document sync)
IRIS_CRM_API_KEY=your-iris-crm-api-key
IRIS_CRM_SUBDOMAIN=your-company-subdomain

# SignNow E-Signature Integration
SIGNNOW_API_KEY=your-signnow-api-key
SIGNNOW_API_BASE_URL=https://api.signnow.com
SIGNNOW_OWNER_EMAIL=submissions@miapayments.com

# Cloudflare Zero Trust Configuration (for enterprise security)
CLOUDFLARE_TEAM_DOMAIN=yourteam.cloudflareaccess.com
CLOUDFLARE_ACCESS_AUD=your-application-audience-id
CLOUDFLARE_ACCESS_ISSUER=https://yourteam.cloudflareaccess.com

# Replit-specific (optional, for Replit deployments)
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-replit-domains
ISSUER_URL=https://auth.replit.com
